<%= form_for @question, url: {action: :update} do |f| %>
    <p>答えを選択してください</p>
    <%- answers = [
        ["answer1", '解答1'],
        ["answer2", '解答2'],
        ["answer3", '解答3'],
        ["answer4", '解答4']
    ] %>

    <%= f.collection_radio_buttons(:choice, answers, :first, :second) %>
    
    <p>
        <%= f.submit '回答' %>
    </p>
    
<% end %>